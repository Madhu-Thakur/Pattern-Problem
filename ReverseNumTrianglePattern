import java.util.Scanner;
public class ReverseNumTrianglePattern {
    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        System.out.println("  Left Star Half Triangle Pattern:");
        System.out.println("Enter number of Rows:");
        int n=s.nextInt();
        int num=1;
        for(int i=1; i<=n; i++){
            for(int j=1; j<i; j++){
                System.out.print(" ");
            }
            for(int j=i; j<=n; j++){
                System.out.print(j+" ");
            }
            System.out.println();
        }
    }
}
